@model IEnumerable<LALC.Models.Subcategoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col">
        <button type="button" class="btn btn-dark fs-5" style="width:18%" onclick="location.href='@Url.Action("Create", "Subcategorias")'">Crear</button>
    </div>
    
</div>


<div class="d-flex p-2 bd-highlight">
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card text-center text-white bg-primary mb-3" style="max-width: 18rem;" onclick="location.href = '@Url.Action("Details", "Subcategorias", new { id=item.SubcategoriaID}) '">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.Descripcion</p>
                </div>
            </div>
        </div>
    }
</div>
