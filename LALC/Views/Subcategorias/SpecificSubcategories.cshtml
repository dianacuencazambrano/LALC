@using PagedList;
@using PagedList.Mvc;
@model IPagedList<LALC.Models.Subcategoria>
@{
    ViewBag.Title = "SpecificSubcategories";
}

<h2>SUBCATEGORÍAS</h2>

<div class="row">
    <div class="col">
        <button type="button" class="btn btn-dark fs-5" style="width:18%" onclick="location.href='@Url.Action("Create", "Subcategorias")'">Crear</button>
    </div>
    <div class="col">
        @using (Html.BeginForm("SpecificSubcategories", "Subcategorias", FormMethod.Get))
        {
            @Html.TextBox("TituloS")
            <input style="background: skyblue" class="justify-content-end" type="submit" value="Buscar" />
        }
    </div>
</div>

<style>
    .cards {
        margin-top: 30px;
        max-width: 1000px;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 30px;
    }
</style>

<div class="cards">
    @foreach (var item in Model)
    {
        <div class="card text-center text-white bg-primary mb-3" onclick="location.href = '@Url.Action("SpecificConcepts", "Conceptoes", new { id=item.SubcategoriaID}) '">
            <div class="card-body">
                <h5 class="card-title">@item.Nombre</h5>
                <p class="card-text">@item.Descripcion</p>
            </div>
        </div>
    }
</div>


@Html.PagedListPager(Model, pagina => Url.Action("SpecificSubcategories", new { pagina, TituloS = Request.QueryString["TituloS"] }))


