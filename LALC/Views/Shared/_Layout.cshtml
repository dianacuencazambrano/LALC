<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>@ViewBag.Title - LALC</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href=@Url.Action("Index", "Home")>
                    <img src="~/img/LALC.png" width="120" height="50" alt="">
                </a>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href=@Url.Action("Index", "Categorias")>Categorias</a>
                        </li>
                    </ul>
                </div>
                <form class="d-flex">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <button type="button" name="Iniciar Sesión" class="btn btn-light" onclick="location.href='@Url.Action("Login", "Auth")'" >Iniciar Sesión</button>
                    }
                    else
                    {
                        <a style="color:navajowhite">   @User.Identity.Name   </a>
                        <div class="btn btn-light" type="button" style="margin-left:20px">
                            @Html.ActionLink("   Cerrar Sesión  ", "LogOut", "Auth")
                        </div>
                    }
                </form>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
        </div>
    </header>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
